.goods-swiper .swiper {
  height: 420rpx;
}
.goods-swiper .swiper .swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods-swiper .swiper .swiper-item image {
  width: 45%;
}
.goods-info {
  padding: 20rpx 0;
  border-bottom: 5rpx solid #f4f4f4;
}
.goods-info .goods-price {
  color: var(--themeColor);
  font-size: 40rpx;
  padding: 0 20rpx;
}
.goods-info .goods-name-box {
  display: flex;
}
.goods-info .goods-name-box .goods-name {
  flex: 5;
  padding: 0 20rpx;
}
.goods-info .goods-name-box .goods-collecting {
  flex: 1;
  text-align: center;
  border-left: 5rpx solid #ccc;
}
.goods-info .goods-name-box .goods-collecting .icon-shoucangmian {
  color: var(--themeColor);
}
.goods-detail {
  margin-bottom: 90rpx;
}
.goods-detail .goods-detail_title {
  color: var(--themeColor);
  font-size: 40rpx;
  padding: 20rpx;
  border-bottom: 5rpx solid #f4f4f4;
}
.function-buttons {
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  display: flex;
  background-color: #fff;
}
.function-buttons .function-buttons_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.function-buttons .btn-share,
.function-buttons .btn-cart,
.function-buttons .btn-service {
  flex: 1;
  text-align: center;
  border-top: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  font-size: 20rpx;
  position: relative;
}
.function-buttons .btn-share button,
.function-buttons .btn-cart button,
.function-buttons .btn-service button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.function-buttons .btn-addCart {
  flex: 2;
  color: #fff;
  background-color: #ffa500;
}
.function-buttons .btn-buy {
  flex: 2;
  color: #fff;
  background-color: var(--themeColor);
}
